
@{
    ViewData["Title"] = "Donate";
}

<h1>Donate</h1>

<head>
    <style>
        /* Define the CSS styles */
        .custom-paragraph {
            font-family:'Myanmar Text';
            font-size: 25px;
            font-weight: 100;
            color: black;
        }
    </style>
</head>

<head>
    <style>
        /* Define the CSS styles */
        .custom-header {
            font-family: 'Myanmar Text';
            font-weight: 500;
            color: black;
            font-size: 35px;
        }
    </style>
</head>


<section id="team">
    <div class="container">
        <div class="grid">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="~/lib/photos/donate/donate1.1.png" alt="Donatecard" style="width:300px;height:400px;">
                    </div>
                    <div class="flip-card-back">
                        <p> </p>
                        <p class="custom-header">Step One</p>
                        <p class="custom-paragraph">Order a donation kit today!</p>
                        <p class="custom-paragraph">Choose a size; small, medium or large.</p>
                        <p class ="custom-paragraph">Free alongside any purchase or $5 alone</p>
                    </div>
                </div>
            </div>

            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="~/lib/photos/donate/donate2.png" alt="Donatecard" style="width:300px;height:400px;">
                    </div>
                    <div class="flip-card-back">
                        <p> </p>
                        <p class="custom-header">Step Two</p>
                        <p class="custom-paragraph">Clear your wardrobe!</p>
                        <p class="custom-paragraph">Pack any unwanted items into the bag, and attach free shipping label.</p>
                        <p class="custom-paragraph">Drop off at your closest post centre</p>
                    </div>
                </div>
            </div>

            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="~/lib/photos/donate/donate3.png" alt="Donatecard" style="width:300px;height:400px;">
                    </div>
                    <div class="flip-card-back">
                        <p> </p>
                        <p class="custom-header">Step Three</p>
                        <p class="custom-paragraph">Once we recieve your kit, our team will sort through the items. 
                        </p>
                        <p class="custom-paragraph"> They will either be for sale second hand, or recycled to create our new pieces</p>
                    </div>
                </div>
            </div>

            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="~/lib/photos/donate/donate4.png" alt="Donatecard" style="width:300px;height:400px;">
                    </div>
                    <div class="flip-card-back">
                        <p> </p>
                        <p class="custom-header">Step Four</p>
                        <p class="custom-paragraph">After this process is completed, you will rewarded with shopping credits to be used on our site!</p>
                    </div>
</div>
</div>
</div>
    <div/>
    </div>
</section>

<!-- Order Donation Kit:-->

<div class="small-container">
    <p> </p>
    <h2 class="title"> Order Donation Kit:</h2>
    <div class="row">
        <div class="col-3">
            <img src="~/lib/photos/donate/bag1.png" />
            <h4>Small Donation Kit</h4>
            <p>$2.00</p>
        </div>
        <div class="col-3">
            <img src="~/lib/photos/donate/box2.jpg" />
            <h4>Medium Donation Kit</h4>
            <p>$3.50</p>
        </div>
        <div class="col-3">
            <img src="~/lib/photos/donate/box1.png" />
            <h4>Large Donation Kit</h4>
            <p>$5.00</p>
        </div>
    </div>
</div>

    