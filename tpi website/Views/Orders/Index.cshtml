@model IEnumerable<tpi_website.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ship_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To_street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To_city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To_zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductNames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ship_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To_street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To_city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To_zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductNames)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
